<!-- checks item rating and then returns the correct represetation of stars and the total size of an items ratings --> 
<% binding.pry %>
    <% item = @item %>
    <% if item.rating.nil? %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(0..0.49) %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(0.5..0.99) %>
      <%= render "/items/ratings/stars/half" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(1..1.49) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(1.5..1.99) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/half" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(2..2.49) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(2.5..2.99) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/half" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(3..3.49) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/empty" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(3.5..3.99) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/half" %>
      <%= render "/items/ratings/stars/empty" %>
    <% elsif item.rating.to_i.include?(4..4.49) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/half" %>
    <% elsif item.rating.to_i.include?(4.5..5) %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
      <%= render "/items/ratings/stars/full" %>
    <% else %>
    <% end %><small><%=link_to "(#{item.reviews.all.size})", item_path(item), class:"text-decoration-none btn p-0 bg-transparent" %></small>
