<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sku</th>
      <th>Description</th>
      <th>Price</th>
      <th>Rating</th>
      <th>Brand</th>
      <th>Weight</th>
      <th>Dimensions</th>
      <th>Manufacturer</th>
      <th>Origin</th>
      <th>Colo</th>
      <th>Material</th>
      <th>Quantity</th>
      <th>Inventory</th>
      <th>Category</th>
      <th>Order</th>
      <th>Shopping cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.sku %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.rating %></td>
        <td><%= item.brand %></td>
        <td><%= item.weight %></td>
        <td><%= item.dimensions %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.origin %></td>
        <td><%= item.colo %></td>
        <td><%= item.material %></td>
        <td><%= item.quantity %></td>
        <td><%= item.inventory_id %></td>
        <td><%= item.category_id %></td>
        <td><%= item.order_id %></td>
        <td><%= item.shopping_cart_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
