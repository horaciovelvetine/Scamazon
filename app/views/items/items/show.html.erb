<div class="mt-2 p-3">
  <div class="row p-0">
    <ol class="breadcrumb">
      <%= link_to "â€¹-- Back to results", url_for(:back) %>
    </ol>
  </div>
  
  <div class="row p-0 d-flex flex-row flex-fill">
    <div class="col-5">
      <%= render "/items/items/show/fs_pictures_carousel"%>
    </div>
    <div class="col-4">
      <%= render "/items/items/show/details" %>
    </div>
    <div class="col-3 p-2">
      <%= render "/items/items/show/buybox"%>
    </div>
  </div><br><br>
  <hr>
  <div class="row my-5">
    <div class="col align-self-center ps-4"><%= render "/item/shared/explore_more_items"%></div>
  </div>
  <hr>
  <div class="row">
    <div class="col">

      <div class="d-flex flex-row">
      
        <div class="col-3 pe-3">
          <div class="row">
            <div class="fs-3 fw-bolder mb-1">Customer reviews</div>
          </div>
          <div class="row">
            <%= render '/item/ratings/review_show_rating' %>
          </div>
          <div class="row ps-1">
            <span class="lead fs-6"><%= @item.reviews.all.length%> global ratings</span>
          </div>
          <hr>
          <div class="row">
            <div class="fs-4 mb-1">Review this product</div>
          </div>
          <div class="row">
            <div class="fs-6">Share your thoughts with other customers</div>
          </div>
          <div class="row mx-3 my-3 pb-4">
            <%= link_to "Write a cusomer review", new_item_review_path(id: params[:id]), class:"btn btn-outline-dark w-100 shadow-sm"%>
          </div>
          <hr>
          <div class="row p-3">
            <%= link_to image_tag(Faker::Placeholdit.image(size:'365x365'), class:"img-fluid"), item_path(@rnd_item), class:"" %>
            <div class="text-muted text-end"><small>sponsored content</small></div>
          </div>
        </div>


        <div class="col-9 ms-2 m-1">
          <div class="row mb-1 ps-2 py-2">
            <div class="col-12 fs-5 fw-bolder lead">Sort Reviews by</div>
          </div>


          <div class="row ps-2 pb-3">
            <div class="col-12">
                <%= form_with url:"/", method:"POST" do |f| %>
                  <%= fields_for :dropdown_button do |form| %>
                      <%= form.select :option, [["Featured", "Featured"], ["Price: Low to High","Price:LH"], ["Price: High to Low", "Price:HL"], ["Avg. Customer Review", "AvgReview"], ["Newest Arrivals", "New"]], selected:"Featured",  data_toggle:"dropdown", aria_expanded:"false" %>
                  <% end %>
                <% end %>
            </div>
          </div>


          <div class="row mb-1 ps-2">
            <div class="col-12 fs-5 fw-bolder lead">Top Reviews from the United States</div>
          </div>
          <hr>

          <div class="row">
            <div class="col-12">
              <% @rev_item = find_item %>
              <% if @rev_item.reviews.empty? %>
                <div class="text-muted container"><em>No reviews for this item currently, <%= link_to "be the first!", new_item_review_path(@item)%></em></div>
              <% else %>
                <% @rev_item.reviews.each do |review| %>
                    <%= render '/review/shared/customer_review_card', review: review %>
                <% end %>
              <% end %>
            </div>
          </div>
      </div>

    </div>
<hr>
  </div>


  <div class="row mt-5">
    <%= render "/item/shared/explore_more_items"%>
  </div>
</div>





