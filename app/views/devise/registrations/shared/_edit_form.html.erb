<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <li class="list-group-item">
          <div class="row">
            
            <div class="col-8">
              <div class="text-start fw-bolder">
                <%= f.label :first_name %>
              </div>
            </div>

            <div class="col-4">
              <div class="field">
                <%= f.text_field :first_name, class:"form-control" %>
              </div>
            </div>

          <div class="row">
            <div class="col-12">
              <p class="lh-1"><%= "#{user_first_name}" %></p>
            </div>
          </div>

        </li>

        <li class="list-group-item">
          <div class="row">
            <div class="col-8">
              <div class="text-start fw-bolder">
                <%= f.label :last_name %>
              </div>
            </div>
            <div class="col-4">
            <div class="field">
              <%= f.text_field :last_name, class:"form-control" %>
            </div>
            </div>
            
            <div class="row">
              <div class="col-12">
                <p class="lh-1"><%= "#{user_last_name}" %></p>
              </div>
            </div>

          </div>
        </li>


        <li class="list-group-item">
        
          <div class="row">
            
            <div class="col-8">
              <div class="text-start fw-bolder">
                <%= f.label :phone %>
              </div>
            </div>
            
            <div class="col-4">
              <div class="field">
                <%= f.text_field :phone, class:"form-control" %>
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-12">
              <p class="lh-1"><%= "#{user_phone}" %></p>
            </div>
          </div>

        </li>


        <li class="list-group-item">

          <div class="row">

            <div class="col-8">
              <div class="text-start fw-bolder">
                <%= f.label :email %>
              </div>
            </div>

            <div class="col-4">
              <div class="field">
                <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
              </div>
            </div>
          </div>

            <div class="row">
              <div class="col-12">
                <p class="lh-1"><%= "#{user_email}" %></p>
              </div>
            </div>

        </li>


        <li class="list-group-item">
          <div class="row">
            <div class="col">
              <div class="text-start fw-bolder">
                <%= f.label :address %>
              </div>
            </div>
            <div class="col">
              <div class="field">
                <%= f.text_field :address, class:"form-control" %>
              </div>
            </div>
            
            <div class="row">
              <div class="col">
                <p class="lh-sm"><%= "#{user_address}" %></p>
              </div>
            </div>
        </li>
        <li class="list-group-item">
          <div class="text-start fw-bolder">
            <%= f.label :pssword %>
          </div>
          <div class="field py-2">
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>

            <% if @minimum_password_length %>
            <div class="text-start pb-1">
            <em>(<%= @minimum_password_length %> characters minimum)</em></div>
            <% end %>
          </div>
        </li>
        <li class="list-group-item">
          <div class="text-start fw-bolder">
            <%= f.label :password_confirmation %>
          </div>
          <div class="field py-2">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
        </li>
          <div class="actions mt-3">
            <%= f.submit "Done", class:"btn btn-primary"%>
          </div>
<% end %>